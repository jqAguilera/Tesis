<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginApp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="284dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="66dp"
                android:layout_marginTop="106dp"
                android:layout_marginEnd="61dp"
                android:text="Completa tu datos!!"
                android:textColor="@color/Inacap"
                android:textSize="30dp"
                android:textStyle="bold|italic"></TextView>

            <TextView
                android:layout_width="83dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="56dp"
                android:layout_marginTop="244dp"
                android:layout_marginEnd="272dp"
                android:text="RUT:"
                android:textSize="15dp"
                android:textStyle="italic"></TextView>

            <TextView
                android:layout_width="63dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="57dp"
                android:layout_marginTop="197dp"
                android:layout_marginEnd="291dp"
                android:text="Nombre:"
                android:textSize="15dp"
                android:textStyle="italic"></TextView>



            <TextView
                android:layout_width="83dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="52dp"
                android:layout_marginTop="283dp"
                android:layout_marginEnd="276dp"
                android:text="Carrera:"
                android:textSize="15dp"
                android:textStyle="italic"></TextView>

            <EditText
                android:id="@+id/etNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="131dp"
                android:layout_marginTop="187dp"
                android:layout_marginEnd="71dp"
                android:ems="10"
                android:hint="Nombre"
                android:inputType="textPersonName"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/etRut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="132dp"
                android:layout_marginTop="235dp"
                android:layout_marginEnd="70dp"
                android:ems="10"
                android:hint="ej: 12345678-9"
                android:inputType="text"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/etCarrera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="140dp"
                android:layout_marginTop="273dp"
                android:layout_marginEnd="62dp"
                android:ems="10"
                android:hint="Carrera"
                android:inputType="text"
                android:textSize="15dp" />


            <Button
                android:id="@+id/btnCompletar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="143dp"
                android:layout_marginTop="459dp"
                android:layout_marginEnd="145dp"
                android:text="Completar"
                android:textSize="11dp"
                android:textStyle="italic"></Button>


        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"></LinearLayout>


</LinearLayout>